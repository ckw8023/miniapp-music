<!--pages/playmusic/playmusic.wxml-->
<image class="background" src="{{songDetail.al.picUrl}}"></image>
<view class="songName">{{songDetail.al.name}}</view>
<!--轮播-->
<swiper>
  <swiper-item class="imagebox">
    <image src="{{songDetail.al.picUrl}}"></image>
  </swiper-item>
  <swiper-item>
    <!--Swiper-->
    <scroll-view scroll-y="true">
      <block wx:for="{{songLyric}}" wx:key="this">
        <view>{{item[1]}}</view>
      </block>
    </scroll-view>
  </swiper-item>
</swiper>
<!--Play mode-->
<view class="playmode">
  <image src="/img/播放-循环播放.png"></image>
</view>
<!--Loading bar-->
<view class="loadbar">
  <view>00:00</view>
  <slider block-size="12" selected-color="white"></slider>
  <view>03:20</view>
</view>
<!--Footer-->
<view class="footer">
  <image src="/img/上一首.png"></image>
  <image src="/img/{{action.method==='play'?'暂停':'播放2'}}.png" 
  bindtap="playcontrol"></image>
  <image src="/img/下一首.png"></image>
</view>
<audio src="{{songUrl}}" action="{{action}}"></audio>